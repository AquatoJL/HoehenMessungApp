<CameraScreen>:
    orientation: 'vertical'
    
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    Preview:
        id: preview
        letterbox_color: 0, 0, 0, 1
        size_hint: 1, 1

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.15
        spacing: 10
        padding: 10
        
        Button:
            text: 'Foto'
            background_color: 0, 1, 0, 1
            on_press: app.capture_photo()
        
        Button:
            text: 'Foto'
            background_color: 0, 0.7, 1, 1
            on_press: app.capture_photo()
        
        Button:
            text: 'Exit'
            background_color: 1, 0, 0, 1
            on_press: app.capture_photo()
